<Window x:Class="LettersRegistration.Client.MessageWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отправка письма" Height="370" Width="400">
    <Grid>
        <Label Content="Тема:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="SubjectTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,30,0,0"/>

        <Label Content="Отправитель:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>

        <TextBox Name="SenderTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,80,0,0"/>

        <Label Content="Получатель:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>

        <TextBox Name="AddresseTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,120,0,0"/>

        <Label Content="Тело письма:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0"/>
        <TextBox Name="BodyTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="100" Margin="10,160,0,0"/>

        <Button Content="Отправить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,280,0,0" Click="SendButton_Click"/>
    </Grid>
</Window>
