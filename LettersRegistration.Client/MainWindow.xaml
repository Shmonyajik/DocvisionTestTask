<Window x:Class="LettersRegistration.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="400" Width="600">
    <Grid>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Отправить письмо" Click="SendMessageMenuItem_Click"/>
                <MenuItem Header="Просмотреть отправленные письма" Click="ViewSentMessagesMenuItem_Click"/>
                <MenuItem Header="Выход" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Label Content="Введите ваше имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0"/>
        <TextBox Name="SenderNameInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,50,0,0"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Margin="220,50,0,0" Click="SaveNameButton_Click"/>
       
    </Grid>
</Window>