<Window x:Class="LettersRegistration.Client.SuccessWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Успех" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="SuccessTextBlock" Text="Успешно отправлено!" TextWrapping="Wrap" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="ОК" Width="75" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="OKButton_Click"/>
        <Image HorizontalAlignment="Left" Height="73" Margin="297,0,0,0" VerticalAlignment="Center" Width="73" Source="/successIcon.png"/>
    </Grid>
</Window>
